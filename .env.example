# =============================================================================
# TEMPLATE DE VARIÁVEIS DE AMBIENTE
# Copie este arquivo para .env.local e preencha com seus valores
# =============================================================================

# =============================================================================
# CONFIGURAÇÕES DO NEXT.JS
# =============================================================================
NODE_ENV=development
PORT=3000
HOSTNAME=0.0.0.0

# =============================================================================
# APLICAÇÃO - CONFIGURAÇÕES BÁSICAS
# =============================================================================
NEXT_PUBLIC_APP_NAME="Seu Portfolio"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:5001

# =============================================================================
# REDES SOCIAIS E PERFIS
# =============================================================================
NEXT_PUBLIC_TWITTER_HANDLE=@seuhandle
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/in/seuperfil
NEXT_PUBLIC_GITHUB_URL=https://github.com/seuusuario

# =============================================================================
# PWA (PROGRESSIVE WEB APP)
# =============================================================================
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_PWA_NAME="Seu Portfolio"
NEXT_PUBLIC_PWA_SHORT_NAME="Portfolio"
NEXT_PUBLIC_PWA_DESCRIPTION="Descrição do seu portfolio"
NEXT_PUBLIC_PWA_THEME_COLOR="#000000"
NEXT_PUBLIC_PWA_BACKGROUND_COLOR="#ffffff"

# =============================================================================
# ANALYTICS E MONITORAMENTO (OPCIONAL)
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS_TRACKING=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false

# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
GOOGLE_ANALYTICS_ID=

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=
MIXPANEL_TOKEN=

# Sentry (opcional)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_DSN=

# =============================================================================
# FEATURES E FUNCIONALIDADES
# =============================================================================
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_REAL_TIME_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false
NEXT_PUBLIC_ENABLE_MULTILINGUAL=false
NEXT_PUBLIC_ENABLE_BLOG=false
NEXT_PUBLIC_ENABLE_COMMENTS=false
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_SEARCH=true

# =============================================================================
# EMAIL PARA FORMULÁRIO DE CONTATO
# =============================================================================
EMAIL_FROM=
EMAIL_TO=
SENDGRID_API_KEY=
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# =============================================================================
# SEGURANÇA
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# DESENVOLVIMENTO
# =============================================================================
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_PERFORMANCE_METRICS=true

# =============================================================================
# CDN (opcional)
# =============================================================================
NEXT_PUBLIC_CDN_URL=
NEXT_PUBLIC_IMAGES_CDN=
