# =============================================================================
# CONFIGURAÇÕES DO NEXT.JS
# =============================================================================
NODE_ENV=development
PORT=3000
HOSTNAME=0.0.0.0

# =============================================================================
# APLICAÇÃO - CONFIGURAÇÕES BÁSICAS
# =============================================================================
NEXT_PUBLIC_APP_NAME="Portfolio Professional"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:5001

# =============================================================================
# REDES SOCIAIS E PERFIS
# =============================================================================
NEXT_PUBLIC_TWITTER_HANDLE=@yourhandle
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/in/yourprofile
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername

# =============================================================================
# PWA (PROGRESSIVE WEB APP)
# =============================================================================
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_PWA_NAME="Portfolio Professional"
NEXT_PUBLIC_PWA_SHORT_NAME="Portfolio"
NEXT_PUBLIC_PWA_DESCRIPTION="Portfolio profissional desenvolvido com Next.js"
NEXT_PUBLIC_PWA_THEME_COLOR="#000000"
NEXT_PUBLIC_PWA_BACKGROUND_COLOR="#ffffff"

# =============================================================================
# ANALYTICS E MONITORAMENTO
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS_TRACKING=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
MIXPANEL_TOKEN=your-mixpanel-token

# Sentry (para error tracking)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# FEATURES E FUNCIONALIDADES
# =============================================================================
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_REAL_TIME_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_MULTILINGUAL=false
NEXT_PUBLIC_ENABLE_BLOG=false
NEXT_PUBLIC_ENABLE_COMMENTS=false
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_SEARCH=true

# =============================================================================
# APIs E SERVIÇOS EXTERNOS
# =============================================================================
# APIs do Portfolio
PORTFOLIO_API_URL=https://api.yourportfolio.com
PORTFOLIO_API_KEY=your-api-key

# Blog API (se habilitado)
BLOG_API_URL=https://blog.yourportfolio.com/api
BLOG_API_KEY=your-blog-api-key

# Documentação
DOCS_URL=https://docs.yourportfolio.com

# =============================================================================
# EMAIL E NOTIFICAÇÕES
# =============================================================================
# Para formulário de contato
EMAIL_FROM=noreply@yourportfolio.com
EMAIL_TO=contact@yourportfolio.com

# SendGrid (exemplo)
SENDGRID_API_KEY=your-sendgrid-api-key

# Nodemailer SMTP (alternativa)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# BASE DE DADOS (se necessário)
# =============================================================================
# MongoDB
# DATABASE_URL=mongodb://localhost:27017/portfolio

# PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/portfolio

# =============================================================================
# AUTENTICAÇÃO (se necessário)
# =============================================================================
# NextAuth.js
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-nextauth-secret

# GitHub OAuth (exemplo)
# GITHUB_ID=your-github-oauth-id
# GITHUB_SECRET=your-github-oauth-secret

# =============================================================================
# DESENVOLVIMENTO E DEBUG
# =============================================================================
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_PERFORMANCE_METRICS=true

# =============================================================================
# SEGURANÇA
# =============================================================================
# Chave secreta para tokens JWT (se necessário)
JWT_SECRET=your-super-secret-jwt-key

# CORS Origins permitidas
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# CACHE E PERFORMANCE
# =============================================================================
# Redis (se usando cache)
# REDIS_URL=redis://localhost:6379

# CDN URLs
NEXT_PUBLIC_CDN_URL=https://cdn.yourportfolio.com
NEXT_PUBLIC_IMAGES_CDN=https://images.yourportfolio.com